<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="40sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/b_AC"
                style="@style/ActionButtonStyle"
                android:text="AC"/>

            <TextView
                android:id="@+id/b_divide"
                style="@style/ActionButton2Style"
                android:text="/"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_7"
                style="@style/NumberButtonStyle"
                android:text="7"/>

            <TextView
                android:id="@+id/b_8"
                style="@style/NumberButtonStyle"
                android:text="8"/>

            <TextView
                android:id="@+id/b_9"
                style="@style/NumberButtonStyle"
                android:text="9"/>

            <TextView
                android:id="@+id/b_mul"
                style="@style/ActionButton2Style"
                android:text="*"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_4"
                style="@style/NumberButtonStyle"
                android:text="4"/>


            <TextView
                android:id="@+id/b_5"
                style="@style/NumberButtonStyle"
                android:text="5"/>

            <TextView
                android:id="@+id/b_6"
                style="@style/NumberButtonStyle"
                android:text="6"/>

            <TextView
                android:id="@+id/b_minus"
                style="@style/ActionButton2Style"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_1"
                style="@style/NumberButtonStyle"
                android:text="1"/>

            <TextView
                android:id="@+id/b_2"
                style="@style/NumberButtonStyle"
                android:text="2"/>

            <TextView
                android:id="@+id/b_3"
                style="@style/NumberButtonStyle"
                android:text="3"/>

            <TextView
                android:id="@+id/b_plus"
                style="@style/ActionButton2Style"
                android:text="+"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/b_dot"
                style="@style/ActionButton2Style"
                android:text="."/>

            <TextView
                android:id="@+id/b_0"
                style="@style/NumberButtonStyle"
                android:text="0"/>

            <TextView
                android:id="@+id/b_del"
                style="@style/ActionButtonStyle"
                android:text="DEL"/>

            <TextView
                android:id="@+id/b_equals"
                style="@style/EqualButtonStyle"
                android:text="="/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>